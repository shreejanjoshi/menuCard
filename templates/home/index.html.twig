{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- Hero section -->
<section class="hero-section">
    <div class="hero-slider owl-carousel">
        <div class="hs-item">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="hs-text">
                            <h2><span>{{ dish1.name }}!</span></h2>
                            <p>Try this, {{ dish1.description }} which will cost only {{ dish1.price }}!
                                <br>Order now to find out.</p>
                            <a href="{{ path('menu') }}" class="site-btn">Menu Card</a>
                            <a href="{{ path('orders', {id: dish1.id}) }}" class="site-btn sb-c2">Order</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="hr-img">
                            <img src="{{asset('images/' ~ dish1.image)}}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hs-item">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="hs-text">
                            <h2><span>{{ dish2.name }}!</span></h2>
                            <p>Try this, {{ dish2.description }} which will cost only {{ dish2.price }}!
                                <br>Order now to find out.</p>
                            <a href="{{ path('menu') }}" class="site-btn">Menu Card</a>
                            <a href="{{ path('orders', {id: dish2.id}) }}" class="site-btn sb-c2">Order</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="hr-img">
                            <img src="{{asset('images/' ~ dish2.image)}}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero section end -->
{% endblock %}
