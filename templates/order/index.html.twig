{% extends 'base.html.twig' %}

{% block body %}
{% set sum = 0 %}
    <br>
    <div class="container">
        <h2>Your Orders</h2>
    <br>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>Order No.</td>
                <td>Name</td>
                <td>Price</td>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <td>Status</td>
                {% endif %}
                <td></td>
            </tr>
        </thead>

        <tbody>
            {% for order in ordering %}
                {% set sum = sum + order.price %}
                <tr>
                    <td>{{ order.ordernumber }}</td>
                    <td>{{ order.name }}</td>
                    <td>{{ order.price }}</td>
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <td>{{ order.status }}</td>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <td>
                        <div class="dropdown show">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ order.status }}
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('status', {id: order.id, status: 'open'}) }}">Open</a>
                                <a class="dropdown-item" href="{{ path('status', {id: order.id, status: 'cooking'}) }}">Cooking</a>
                                <a class="dropdown-item" href="{{ path('status', {id: order.id, status: 'ready'}) }}">Ready</a>
                            </div>
                        </div>
                    </td>
                    {% endif %}

                    <td>
                        {% if order.status == 'open' %}
                            <a href="{{ path('remove', {id: order.id}) }}" class="btn btn-outline-danger btn-sm" role="button">Remove</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        <td></td><td></td>
        <td>{{ sum }} EUR</td>
            <td></td><td></td>
        </tbody>
    </table>
    </div>
{% endblock %}
